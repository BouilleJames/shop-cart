extends layout 

block content
  .jumbotron
    h1.display-4 Bienvenue
    p.lead Ci-dessous, les produits disponibles
  .row 
    each product in products 
      .col-sm-6.col-md-4
        .card 
          img(src=product.image, alt=product.name).card-img-top
          .card-body
            h3.card-title= product.name
            h5 
              | Prix :
              span.badge.badge-pill.badge-dark #{product.price} â‚¬
            hr
            .d-flex.justify-content-between.align-items-center.m-0.p-2
              a(href='/produit/'+product.id).btn.btn-outline-dark.btn-sm.mr-2 Voir le produit
              form(action='/ajouter-au-panier', method='post')
                input(type='hidden', name='productId', value=product.id)
                button(type='submit').btn.btn-outline-dark.btn-sm Ajouter au panier